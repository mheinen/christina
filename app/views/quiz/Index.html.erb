<div>

  <audio src="<%= audio_path('jingle.mp3') %>" class="audio"></audio>
  <audio src="<%= audio_path('ergebnis.mp3') %>" class="audio2"></audio>
  <audio src="<%= audio_path('hoho.mp3') %>" class="audio3"></audio>
